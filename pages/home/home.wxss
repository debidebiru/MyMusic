/* pages/home/home.wxss */
::-webkit-scrollbar{
  display: none;
}
/* 轮播图 */
swiper{
  height: 350rpx;
  border-bottom: 1rpx solid black;
  margin-bottom: 10px;
}
swiper image{
  height: 350rpx;
  width: 100%;
}
/* 图标导航 */
.navContainer{
  display: flex;
  margin-bottom: 25rpx;
}
.navContainer .navitem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.navitem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: #D8C7B5;
  margin: 20rpx 0rpx;
  font-size: 50rpx;
}
.navitem-text{
  font-size: 26rpx;
}

/* 热门歌手*/
.host{
  padding: 20rpx;
}
.hotlist{
  height: 300rpx;
  display: flex;
  overflow: auto;
  align-items: center;

}
.hotlist .item{
  width: 200rpx;
  text-align: center;
  margin-right: 20rpx;
}
.hotlist .item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  object-fit: cover;
}
.hotlist .item text{
  font-size: 28rpx;
  color: #4d4d4d;
}
/* 排行榜 */
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 425rpx;
  border: none;
}
.swiperItem{
  width: 96%;
  background: #fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
