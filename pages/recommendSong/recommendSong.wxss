/* pages/recommendSong/recommendSong.wxss */
.recommendSongContainer .header{
  width: 100%;
  height: 350rpx;
  /* background-image: url("/images/recommendSong/1.jpg"); */
}
.recommendSongContainer .header image{
 width: 100%;
  height: 380rpx;
  position: relative;
  top: -20rpx;

}

.ListContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.listHeader{
  height: 80rpx;
  line-height: 80rpx;
}
.changeMore{
  float: right;
}
/* 内容区 */
.listScroll{
  padding: 0 20rpx 0 ;
  height: calc(100vh - 430rpx);
}
.scrollItem{
  display: flex;
  margin-bottom: 20rpx;
  position: relative;
}
.scrollItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.musicInfo{
  display: flex;
  flex-direction: column;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 20rpx;
}
.musicInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx ;
}
.scrollItem .iconfont{
  position: absolute;
  right: 20rpx;
  height: 80rpx;
  width: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
